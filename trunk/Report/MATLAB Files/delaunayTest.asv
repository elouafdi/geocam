r = round(50 + 450*rand());
% X = normrnd(0,20,r,1);
% Y = normrnd(0,20,r,1);
X = rand(r,1);
Y = rand(r,1);
TRI = delaunay(X,Y);
r;
k = size(TRI,1);
for i = 1:size(TRI,1)
    v1 = TRI(i,1);
    v2 = TRI(i,2);
    v3 = TRI(i,3);
    Temp = [v1 v2 v3];
    XTemp = [X(v1), X(v2), X(v3), X(v1)];
    YTemp = [Y(v1), Y(v2), Y(v3), Y(v1)];
    plot(XTemp,YTemp,'k+',XTemp, YTemp,'r','linewidth',1);
    pause(.005);
    hold on;
end
axis image;
axis off;